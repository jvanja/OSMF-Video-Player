package  com.vanjajelic{	import flash.display.Sprite;	import flash.events.MouseEvent;	import org.osmf.media.MediaPlayerSprite;	public class ProgressBar extends Sprite{		public var track;		public var progress; 		private var _mps:MediaPlayerSprite;		private var _stageWidth:uint;		private var _stageHeight:uint;		private var _barHeight:uint;		public function ProgressBar(mps:MediaPlayerSprite, w:uint, h:uint) {			// constructor code			this._mps = mps;			_stageWidth = w;			_stageHeight = h;			_barHeight = 20;						drawGraphics();		}				private function drawGraphics():void		{			track = new Sprite();			track.addEventListener(MouseEvent.CLICK, trackClick);			track.graphics.beginFill(0x000000, 0.6);			track.graphics.drawRect( 0, _stageHeight - _barHeight, _stageWidth, _barHeight );			track.graphics.endFill();			addChild(track);						progress = new Sprite();			progress.mouseEnabled = false;			progress.graphics.beginFill(0x0099CC, 0.6);			progress.graphics.drawRect(0, _stageHeight - _barHeight, _stageWidth, _barHeight);			progress.graphics.endFill();			addChild(progress);		}				private function trackClick(event:MouseEvent):void		{			_mps.mediaPlayer.seek((track.mouseX / 680) * _mps.mediaPlayer.duration);		}	}	}