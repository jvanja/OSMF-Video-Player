package  com.vanjajelic{		import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.Rectangle;		import org.osmf.media.MediaPlayerSprite;		public class VolumeControl extends Sprite{		private var _mps:MediaPlayerSprite;				public function VolumeControl(mps:MediaPlayerSprite, xpos:int, ypos:int) 		{			this._mps = mps;			this.x = xpos;this.y = ypos;			handle.buttonMode = true;			addDragEvent();		}				private function addDragEvent():void		{			handle.addEventListener(MouseEvent.MOUSE_DOWN, mouseDown) ;			handle.addEventListener(MouseEvent.MOUSE_UP, mouseReleased);		}		private function mouseDown(event:MouseEvent):void 		{			stage.addEventListener(MouseEvent.MOUSE_UP, onDrop);			stage.addEventListener(MouseEvent.MOUSE_MOVE, onSlide);						handle.startDrag(false, new Rectangle(handle.x, 0, 0, bg.height - handle.height));		}				private function onDrop(event:MouseEvent):void		{			stage.removeEventListener(MouseEvent.MOUSE_UP, onDrop);			stage.removeEventListener(MouseEvent.MOUSE_MOVE, onSlide);			stopDrag();		}			private function onSlide(event:MouseEvent):void		{			_mps.mediaPlayer.volume = (bg.height- handle.height - handle.y ) / (bg.height- handle.height);		}				private function mouseReleased(event:MouseEvent):void 		{		    handle.stopDrag();    	}	}}