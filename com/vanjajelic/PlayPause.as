package  com.vanjajelic{		import flash.display.Sprite;	import flash.events.MouseEvent;	import org.osmf.media.MediaPlayerSprite;	public class PlayPause extends Sprite{				private var mps:MediaPlayerSprite;		private var pp:PlayPauseButton;		public function PlayPause(mps, xpos:int, ypos:int) 		{			this.mps = mps;			this.buttonMode = true;						pp = new PlayPauseButton();			pp.addEventListener(MouseEvent.CLICK, playPause);			pp.x = xpos;			pp.y = ypos;						addChild(pp);		}				private function playPause(event:MouseEvent):void		{			if (mps.mediaPlayer.playing)			{				mps.mediaPlayer.pause();				pp.gotoAndStop(2);			} else {				mps.mediaPlayer.play();				pp.gotoAndStop(1);			}		}	}	}