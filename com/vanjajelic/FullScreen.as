package com.vanjajelic {		import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.display.StageDisplayState;	import flash.display.StageScaleMode;	import flash.display.Stage;		// DON'T FORGET TO PUT param <name="allowFullScreen" value="true"> IN THE EMBED CODE	public class FullScreen extends Sprite{		private var fs:FSButton;		public function FullScreen(xpos:int, ypos:int) 		{			this.buttonMode = true;						var fs:FSButton = new FSButton();			fs.x = xpos;			fs.y = ypos;			addChild(fs);						fs.addEventListener(MouseEvent.CLICK, goFullScreen);		}				private function goFullScreen (me:MouseEvent):void		{			trace("[FullScreen] - goFullScreen");			(stage.displayState == StageDisplayState.FULL_SCREEN) ? stage.displayState = StageDisplayState.NORMAL : stage.displayState = StageDisplayState.FULL_SCREEN;				}	}}